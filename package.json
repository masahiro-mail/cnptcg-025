{
  "name": "cnp-tcg-trading-card-game",
  "version": "1.0.0",
  "description": "CNP Trading Card Game - Real-time multiplayer card game built with Next.js and Socket.IO",
  "private": true,
  "type": "module",
  "main": "apps/frontend/src/pages/index.tsx",
  "scripts": {
    "dev": "cd apps/frontend && pnpm run dev",
    "build": "cd apps/frontend && pnpm install --frozen-lockfile && pnpm run build",
    "start": "cd apps/frontend && pnpm run start",
    "lint": "cd apps/frontend && pnpm run lint",
    "type-check": "cd apps/frontend && pnpm run type-check",
    "vercel-build": "cd apps/frontend && pnpm install --frozen-lockfile && pnpm run build",
    "postinstall": "cd apps/frontend && pnpm install --frozen-lockfile"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "socket.io-client": "^4.8.1",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}